{
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "typecheck": "tsc --noEmit -p .",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "lint": "eslint --max-warnings 0 \"src/**/*.{ts,tsx}\"",
    "jest": "jest --coverage --passWithNoTests",
    "test": "yarn lint && yarn typecheck && yarn format:check && yarn jest",
    "eject": "expo eject"
  },
  "dependencies": {
    "@react-native-community/masked-view": "0.1.5",
    "@react-navigation/native": "^5.1.2",
    "@react-navigation/stack": "^5.2.4",
    "expo": "~36.0.0",
    "react": "~16.9.0",
    "react-dom": "~16.9.0",
    "react-native": "https://github.com/expo/react-native/archive/sdk-36.0.0.tar.gz",
    "react-native-gesture-handler": "~1.5.0",
    "react-native-reanimated": "~1.4.0",
    "react-native-safe-area-context": "0.6.0",
    "react-native-screens": "2.0.0-alpha.12",
    "react-native-svg": "9.13.3",
    "react-native-web": "~0.11.7"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0",
    "@types/jest": "^25.1.4",
    "@types/react": "~16.9.0",
    "@types/react-native": "~0.60.23",
    "@types/react-test-renderer": "^16.9.2",
    "babel-preset-expo": "~8.0.0",
    "eslint": "^6.8.0",
    "eslint-config-kodefox": "^0.2.2",
    "eslint-plugin-t": "^1.1.0",
    "jest": "^25.1.0",
    "jest-expo": "^36.0.1",
    "prettier": "^2.0.1",
    "react-native-svg-transformer": "^0.14.3",
    "react-native-testing-library": "^1.13.0",
    "react-test-renderer": "^16.13.1",
    "ts-jest": "^25.2.1",
    "typescript": "^3.8.3"
  },
  "jest": {
    "preset": "jest-expo",
    "moduleNameMapper": {
      "\\.svg$": "<rootDir>/src/__mocks__/svgMock.js"
    },
    "setupFiles": [
      "<rootDir>/src/__mocks__/setup.js"
    ]
  },
  "eslintConfig": {
    "extends": "kodefox/react-native",
    "plugins": [
      "t"
    ],
    "rules": {
      "import/order": 0,
      "t/string-literal": 1
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "arrowParens": "always"
  },
  "private": true
}
